<div class="row">
  {{#each courses}}
    <div class="card" style="width: 18rem; margin:30px">
      <img src="..." class="card-img-top" alt="..." />
      <div class="card-body">
        <a href="/courses/{{this.slug}}"><h5
            class="card-title"
          >{{this.name}}</h5></a>
        <p class="card-text">{{this.description}}</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  {{/each}}
</div>